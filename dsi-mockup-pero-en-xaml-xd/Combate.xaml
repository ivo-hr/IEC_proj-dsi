<Page
    x:Class="dsi_mockup_pero_en_xaml_xd.Combate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:dsi_mockup_pero_en_xaml_xd"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="BigButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="100"/>
            <Setter Property="Margin" Value="40,40,40,40" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="100" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
        <Style x:Key="Character" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="100"/>
            <Setter Property="Margin" Value="40,40,40,40" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="100" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="Margin" Value="40,20,20,20" />
            <Setter Property="Width" Value="180" />
            <Setter Property="HorizontalAlignment" Value="left" />
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Canvas>
            <Image Stretch="Fill" Source="/Assets/bosque.png" Height="1009" Width="1500"/>
        </Canvas>

        <StackPanel Grid.Row="0" Margin="40,0,0,0" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation ="Horizontal" VerticalAlignment="Center" Height="334" Grid.Column="0">
            <Button Style="{StaticResource SmallButton}" Width="165" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/Fireman.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Image.RenderTransform>
                </Image>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="165" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/Fireman.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Image.RenderTransform>
                </Image>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="165" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/Fireman.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Image.RenderTransform>
                </Image>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="165" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/Fireman.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Image.RenderTransform>
                </Image>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation ="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Height="334" Grid.Column="1">
            <Button Style="{StaticResource SmallButton}" Width="180" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/fuego.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                </Image>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="180" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/fuego.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                </Image>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="180" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/fuego.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                </Image>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="180" Height="250" Margin="0, 0, 0, 0">
                <Image Source="/Assets/fuego.png" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                </Image>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Height="334" Background="Blue" Grid.ColumnSpan="2">
            <Button Style="{StaticResource SmallButton}" Width="140" Height="140" Background="Yellow" BorderBrush="Black" BorderThickness="10" VerticalAlignment="Top">
                <Border BorderThickness="10" CornerRadius="10,10,10,10" BorderBrush="Black" Background="Red" RenderTransformOrigin="0.5,0.5" Margin="-55,-55,-55,-55">
                </Border>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="140" Height="140" Background="Yellow" BorderBrush="Black" BorderThickness="10" VerticalAlignment="Top">
            <Border BorderThickness="10" CornerRadius="10,10,10,10" BorderBrush="Black" Background="Red" RenderTransformOrigin="0.5,0.5" Margin="-55,-55,-55,-55">
            </Border>
            </Button>
            <Button Style="{StaticResource SmallButton}" Width="140" Height="140" Background="Yellow" BorderBrush="Black" BorderThickness="10" VerticalAlignment="Top">
            <Border BorderThickness="10" CornerRadius="10,10,10,10" BorderBrush="Black" Background="Red" RenderTransformOrigin="0.5,0.5" Margin="-55,-55,-55,-55">
            </Border>
            </Button>
            <Button Style="{StaticResource BigButton}" Width="200" Height="200" Background="Yellow" BorderBrush="Black" BorderThickness="10" VerticalAlignment="Top">
                <Border BorderThickness="10" CornerRadius="10,10,10,10" BorderBrush="Black" Background="Cyan" RenderTransformOrigin="0.5,0.5" Margin="-79,-79,-79,-79">
                </Border>
            </Button>
        </StackPanel>
    </Grid>
</Page>
