<Page 
    x:Class="dsi_mockup_pero_en_xaml_xd.gameplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:dsi_mockup_pero_en_xaml_xd"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="GameButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="100" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="#55000000"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="40,20,20,20" />
            <Setter Property="Width" Value="180" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.ColumnSpan="3" Grid.RowSpan="3" Stretch="UniformToFill" Source="/Assets/gameplai.png"/>




        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Style="{StaticResource GameButton}" Click="Menu_Click" Width="210">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95">
                    <FontIcon Glyph="&#xE8FD;" FontSize="40" />
                    <TextBlock Text=" MENU" FontSize="45" VerticalAlignment="Center"/>
                </StackPanel>

            </Button>
        </StackPanel>



        <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right">

            <Button Style="{StaticResource GameButton}" Click="Map_Click" Width="210">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95">
                    <TextBlock Text="MAP " FontSize="40" VerticalAlignment="Center"/>
                    <FontIcon Glyph=" &#59143;" FontSize="45"/>

                </StackPanel>

            </Button>
        </StackPanel>



        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Button Style="{StaticResource GameButton}" Click="Pause_Click" Width="210">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95">
                    <FontIcon Glyph="&#59155;" FontSize="40" />
                    <TextBlock Text=" PAUSE" FontSize="45" VerticalAlignment="Center"/>
                </StackPanel>

            </Button>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="3" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="#55000000">
            <TextBlock Text="{x:Bind CurrentTime, Mode=OneWay}" FontSize="30" HorizontalAlignment="Right"/>
            <TextBlock Text="{x:Bind CurrentDate, Mode=OneWay}" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>



        <Grid x:Name="Menu" Grid.ColumnSpan="2" Grid.RowSpan="3" Background="Black" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <TextBlock Text=" MENU" FontSize="60" FontWeight="Bold"  VerticalAlignment="Center" Grid.Row="0"/>

            <Button Style="{StaticResource GameButton}" 
                    Grid.Row="1"
                    Click="Inventory_Click"  
                    PointerEntered="Inv_startHover"
                    PointerExited="stopHover">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95" Width="300">
                    <FontIcon Glyph="&#xE8A9;" FontSize="40" />
                    <TextBlock Text=" inventory" FontSize="45" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource GameButton}" Click="Party_Click"  
                    Grid.Row="2"
                    PointerEntered="Party_startHover"
                    PointerExited="stopHover">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95" Width="300">
                    <FontIcon Glyph="&#xE716;" FontSize="40" />
                    <TextBlock Text=" party" FontSize="45" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource GameButton}" Click="Log_Click" 
                    Grid.Row="3"
                    PointerEntered="Log_startHover"
                    PointerExited="stopHover">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95" Width="300">
                    <FontIcon Glyph="&#xE8A4;" FontSize="40" />
                    <TextBlock Text=" mission log" FontSize="45" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource GameButton}" Click="Map_Click" 
                    Grid.Row="4"
                    PointerEntered="Map_startHover"
                    PointerExited="stopHover">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95" Width="300">
                    <FontIcon Glyph="&#59143;" FontSize="40" />
                    <TextBlock Text=" map" FontSize="45" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Image x:Name="hoverImg" Height="Auto" Width="Auto" Margin="20, 20, 20, 20" Grid.Row="5">
                <Image.Source>
                    <BitmapImage UriSource="/Assets/Blck.png"/>

                </Image.Source>

            </Image>


            <Button Style="{StaticResource GameButton}" Click="Back_Click" Grid.Row="6">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="95" Width="300">
                    <FontIcon Glyph="&#xE7A7;" FontSize="40" />
                    <TextBlock Text=" back" FontSize="45" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </Grid>
        <Button Grid.Column="1" Margin="214,198,0,0" Grid.Row="1" VerticalAlignment="Top" Height="261" Grid.RowSpan="2" Width="164" Opacity="0"  Click="Button_Click"/>





    </Grid>


</Page>
